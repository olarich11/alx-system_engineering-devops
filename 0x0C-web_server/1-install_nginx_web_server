#!/usr/bin/env bash
# Instructions for installing Nginx on Web-Sever-01

# Ensuring Packages are up to date before proceeding with Installations
sudo apt-get -y update
sudo apt-get -y install nginx

# Crafting an index.html page
echo 'Hello World!' > sudo tee /var/www/html/index.nginx-debian.html

# Restarting Nginx
sudo service nginx start
